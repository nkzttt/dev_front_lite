{
  "name": "dev_front_lite",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npm run ready && run-p build:* watch:* server",
    "release": "run-s clean ready release:*",
    "server": "browser-sync start --config bs-config.js",
    "css": "npm run build:css && npm run watch:css",
    "js": "npm run build:js && npm run watch:js",
    "build:html": "ejs-cli -b src/html '*.ejs' -o dist/",
    "build:css": "pleeease-compile",
    "build:js": "browserify src/js/app.js -o dist/js/bundle.js -d -t [ babelify --presets [ es2015 ] --sourceMapsAbsolute ]",
    "watch:html": "watch 'npm run build:html' src/html/",
    "watch:css": "pleeease-watch src/css/**/*.styl",
    "watch:js": "watch 'npm run build:js' src/js/",
    "watch:images": "cpx 'src/images/**/*.*' 'dist/images' -w",
    "release:css": "npm run build:css && uglifycss dist/css/bundle.css > dist/css/bundle.min.css",
    "release:js": "npm run build:js && uglifyjs dist/js/bundle.js -o dist/js/bundle.min.js",
    "release:images": "cpx 'src/images/**/*.*' 'dist/images'",
    "clean": "rimraf dist",
    "ready": "mkdirp 'dist/css' 'dist/js' 'dist/images'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "nkzt",
  "license": "ISC",
  "dependencies": {
    "babel-preset-es2015": "^6.24.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.8",
    "browserify": "^14.1.0",
    "cpx": "^1.5.0",
    "jquery": "^3.2.1",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.0.2",
    "pleeease-cli": "^4.0.0",
    "rimraf": "^2.6.1",
    "uglify-js": "^2.8.18",
    "uglifycss": "0.0.25",
    "watch": "^1.0.2"
  }
}
